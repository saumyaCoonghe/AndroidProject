<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.androidapplication.NumberGuessingApp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="WElCOME TO NUMBER GUESSING APP"
        android:textColor="@android:color/holo_purple"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <Button
        android:id="@+id/btnGO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO"
        android:onClick="Check"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="7dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="170dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="7dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:text="Type Your number here"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/etValue"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="4dp"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="4dp" />

    <EditText
        android:id="@+id/etValue"
        android:layout_width="43dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="137dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnGO"
        android:layout_marginEnd="136dp"
        app:layout_constraintRight_toRightOf="@+id/btnGO"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="2dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        android:layout_marginLeft="137dp"
        android:layout_marginRight="136dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="141dp"
        android:layout_height="33dp"
        android:text="Points"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:layout_marginStart="45dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvPoints"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        android:layout_marginLeft="45dp" />

    <TextView
        android:id="@+id/tvPoints"
        android:layout_width="61dp"
        android:layout_height="38dp"
        android:layout_marginBottom="31dp"
        android:layout_marginTop="35dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnGO"
        app:layout_constraintLeft_toRightOf="@+id/etValue"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/tvRandomNum"
        android:layout_width="76dp"
        android:layout_height="53dp"
        android:textSize="18sp"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="122dp"
        app:layout_constraintLeft_toRightOf="@+id/tv6"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="144dp"
        android:layout_height="64dp"
        android:text="Correct Number"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintRight_toRightOf="@+id/etValue"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvRandomNum"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="48dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tvmsg"
        android:layout_width="289dp"
        android:layout_height="33dp"
        android:text=""
        android:textSize="14sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/tv6"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tv6"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="38dp"
        app:layout_constraintLeft_toRightOf="@+id/tv6" />
</android.support.constraint.ConstraintLayout>
